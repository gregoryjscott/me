{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "lint": "lerna run lint",
    "lint-fix": "lerna run lint-fix",
    "types": "typesync --dry",
    "types-fix": "typesync",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "www": "lerna run www"
  },
  "devDependencies": {
    "lerna": "^6.4.1",
    "prettier": "^2.8.3",
    "typesync": "^0.9.2"
  }
}
