{
  "name": "www",
  "version": "1.0.0",
  "description": "Manages gregoryjscott.com",
  "scripts": {
    "bootstrap": "gem install bundler jekyll && bundle update",
    "tsc": "tsc --noEmit",
    "lint": "npm run tsc && eslint .",
    "lint-fix": "eslint . --fix",
    "build": "bundle exec jekyll build --verbose",
    "prep": "npm run fix-links && npm run embed-resources && npm run generate-desc",
    "fix-links": "ts-node _scripts/fix-links.ts",
    "embed-resources": "ts-node _scripts/embed-resources.ts",
    "generate-desc": "ts-node _scripts/generate-desc.ts",
    "wipe-desc": "ts-node _scripts/wipe-desc.ts",
    "www": "bundle exec jekyll serve",
    "open": "open http://127.0.0.1:4000",
    "deploy": "gh-pages --dist _site --src '**' --repo https://github.com/gregoryjscott/gregoryjscott.github.io.git --branch master --message 'Generated by me'"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.10",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.11",
    "eslint": "^8.29.0",
    "eslint-config-custom": "*",
    "gh-pages": "^3.2.3",
    "gray-matter": "^4.0.3",
    "lodash": "^4.17.21",
    "openai": "^5.0.1",
    "prettier": "2.8.0",
    "ts-node": "^10.9.1",
    "tsconfig": "*",
    "typescript": "^4.9.3",
    "yaml": "^2.1.3"
  }
}
